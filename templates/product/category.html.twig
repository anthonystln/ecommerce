{% extends "base.html.twig" %}

{% block title %}
	Catégorie :
	{{ category.name }}
{% endblock %}

{% block body %}
	<h1>Catégorie :
		{{ category.name }}</h1>

	<div class="row">
		{% for product in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ product.mainPicture }}" class="img-fluid" alt="">
					<div class="card-body">
						<h4>{{ product.name }} ({{ product.price / 100 }} &euro;)</h4>
						<span class="badge bg-info">{{ product.category.name }}</span>
						<p>{{ product.shortDescription }}</p>
						<a href="#" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
